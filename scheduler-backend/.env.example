# 数据库配置
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/scheduler

# Redis配置
REDIS_URL=redis://localhost:6379/0

# JWT密钥
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 应用配置
PROJECT_NAME=智能定时任务控制平台
VERSION=1.0.0
DESCRIPTION=基于FastAPI的智能定时任务调度系统
DEBUG=false
HOST=0.0.0.0
PORT=8000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# 调度器配置
MAX_WORKERS=10
JOB_MAX_INSTANCES=1
JOB_COALESCE=true
JOB_MAX_RUNTIME=3600

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=json,yaml,yml,txt,csv

# 邮件配置（可选）
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# 监控配置
MONITORING_ENABLED=true
METRICS_RETENTION_DAYS=30
HEALTH_CHECK_INTERVAL=60